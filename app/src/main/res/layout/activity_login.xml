<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#F3F4F4"
    android:foregroundTint="#FF5722"
    tools:context=".Login">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:cardCornerRadius="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="234dp"
                android:ems="10"
                app:srcCompat="@drawable/granjaaaa" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/correoLog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Correo"
                android:inputType="textPersonName"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/purple_200"
                android:textColorHint="#EC0D1F" />

            <EditText
                android:id="@+id/passwordLog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Contraseña"
                android:inputType="textPassword"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/purple_200"
                android:textColorHint="#E4151C" />

            <Button
                android:id="@+id/btnIngresarLog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:stateListAnimator="@android:animator/fade_in"
                android:text="Ingresar"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/blanco"
                android:textColorHint="@color/blanco"
                app:icon="@drawable/campo"
                app:iconTint="@color/white" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btnRegistroRedirect"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stateListAnimator="@android:animator/fade_in"
                android:text="Registrate aquí"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/blanco"
                android:textColorHint="@color/blanco"
                app:icon="@drawable/registro"
                app:iconTint="#FFFFFF" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>